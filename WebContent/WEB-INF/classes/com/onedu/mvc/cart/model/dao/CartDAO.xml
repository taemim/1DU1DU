	<!-- 장바구니 삭제 -->
	<delete id="deleteCart">
		DELETE
			   CART
		 WHERE CART_NO = #{ cartNo }
	</delete>
	
	<update id="updateCart">
		UPDATE
			   CART
		   SET AMOUNT = #{ amount }
		 WHERE CART_NO = #{ cartNo }
	</update>
	
	<!-- 장바구니 상품 개별 삭제 -->
		<delete id="deleteOneCart">
			DELETE
				   CART
			 WHERE CART_NO = #{ cartNo }
		</delete>

</mapper>